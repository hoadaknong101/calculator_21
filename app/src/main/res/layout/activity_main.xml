<?xml version="1.0" encoding="utf-8"?>
<!-- Linear layout để chứa các phần tử theo hướng thẳng đứng
     Họ và tên : Võ Nhật Phi
     Thời gian : 09/03/2022-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity"
    app:flow_verticalGap="10dp">

    <!-- Edit text hiển thị các phép tính khi hiện
     Họ và tên : Phạm Đinh Quốc Hòa
     Thời gian : 09/03/2022-->
    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_weight="1"
        android:background="@drawable/bg_edit_text"
        android:editable="false"
        android:fontFamily="@font/red_hat"
        android:gravity="right|bottom"
        android:hint="0"
        android:inputType="textPersonName"
        android:maxLength="9"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="60dp" />

    <!-- Linear layout để chứa các nút 7, 8, 9 và phép chia theo hướng ngang
     Họ và tên : Phạm Đinh Quốc Hòa
     Thời gian : 09/03/2022-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Nút 7
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.3" >
        </Space>
        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="7"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <!-- Nút 8
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="8"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút 9
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="9"
            android:textSize="35dp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút phép tính chia
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_function_button"
            android:fontFamily="@font/open_sans"
            android:text="÷"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.1" >
        </Space>
    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="20dp">
    </Space>
    <!-- Linear layout để chứa các nút 4, 5, 6 và phép nhân theo hướng ngang
     Họ và tên : Phạm Đinh Quốc Hòa
     Thời gian : 09/03/2022-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.3" >
        </Space>
        <!-- Nút 4
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="4"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút 5
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="5"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút 6
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="6"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút phép tính nhân
             Họ và tên : Phạm Đinh Quốc Hòa
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnMultiple"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_function_button"
            android:fontFamily="@font/open_sans"
            android:text="x"
            android:textSize="25dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.1" >
        </Space>
    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="20dp">
    </Space>
    <!-- Linear layout để chứa các nút 1, 2, 3 à phép trừ theo hướng ngang
     Họ và tên : Võ Nhật Phi
     Thời gian : 09/03/2022-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.3" >
        </Space>
        <!-- Nút 1
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="1"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút 2
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="2"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút 3
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="3"
            android:textSize="35dp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.5" >
        </Space>
        <!-- Nút phép tính trừ
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/bg_function_button"
            android:fontFamily="@font/open_sans"
            android:text="-"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="0.1" >
        </Space>
    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="20dp">
    </Space>
    <!-- Linear layout để chứa các nút 0, dấu phẩy và phép trừ theo hướng ngang
     Họ và tên : Võ Nhật Phi
     Thời gian : 09/03/2022-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Space
            android:layout_width="10dp"
            android:layout_height="1px">
        </Space>
        <!-- Nút 0
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnZero"
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="0"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="19dp"
            android:layout_height="0dp">
        </Space>
        <!-- Nút dấu phẩy
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnComma"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_number_button"
            android:fontFamily="@font/open_sans"
            android:text="."
            android:textSize="35dp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="1px">
        </Space>
        <!-- Nút phép tính cộng
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_function_button"
            android:fontFamily="@font/open_sans"
            android:text="+"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_marginRight="100px"/>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp">
    </Space>
    <!-- Linear layout để chứa các nút xóa màn hình , kết quả(dấu bằng) theo hướng ngang
     Họ và tên : Võ Nhật Phi
     Thời gian : 09/03/2022-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Space
            android:layout_width="10dp"
            android:layout_height="1px" >
        </Space>
        <!-- Nút xóa màn hình
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="282dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_cleaner"
            android:fontFamily="@font/red_hat"
            android:text="C"
            android:textSize="35dp"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="16dp"
            android:layout_height="1px">
        </Space>
        <!-- Nút hiển thị kết quả(dấu bằng)
             Họ và tên : Võ Nhật Phi
             Thời gian : 09/03/2022 -->
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_function_button"
            android:fontFamily="@font/open_sans"
            android:text="="
            android:textSize="35dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="64dp">
    </Space>
</LinearLayout>